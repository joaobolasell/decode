{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true,
      "cypress/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react", "cypress"],
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-useless-escape": "warn"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      }
    
  }
  